<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    tools:context=".fragments.CreateNoteFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/fragment_create_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_title"
            android:textSize="@dimen/title_size"
            tools:text="Title" />

        <EditText
            android:id="@+id/fragment_create_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_description"
            android:lines="4"
            android:textSize="@dimen/description_size"
            tools:text="Description" />

        <Spinner
            android:id="@+id/fragment_create_importance_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/fragment_create_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:hint="@string/hint_date"
            android:textSize="12sp"
            tools:text="DATE" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/fragment_create_date_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_button"
            android:text="SET DATE"
            app:cornerRadius="@dimen/corner_radius" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/fragment_create_note_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_button"
            android:text="@string/create_button"
            app:cornerRadius="@dimen/corner_radius" />

    </LinearLayout>


</FrameLayout>